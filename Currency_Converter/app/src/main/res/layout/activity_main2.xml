<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.simranmhatre.currency_converter.Main2Activity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/dollars"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/cc1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:alpha="0.7"
        android:background="#000"
        android:gravity="center"
        android:padding="10dp"
        android:text="Currency Converter"
        android:textColor="#fff"
        android:textSize="35sp"
         />

    <TextView
        android:id="@+id/textview_r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cc1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:textSize="35sp"
        android:text="Rupees"
        android:alpha="0.7"
        android:padding="5dp"
        android:textColor="#ffff"
        android:background="#000"/>

    <EditText
        android:id="@+id/edit_rupees"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/textview_r"
        android:layout_below="@+id/cc1"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginLeft="20dp"
        android:hint="Enter the amount"
        android:textStyle="bold"
        android:background="#000"
        android:textColor="#fff"
        android:layout_height="50dp"
        android:padding="2dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/textview_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_r"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:textSize="35sp"
        android:text="Dollars"
        android:textColor="#ffff"
        android:background="#000"
        android:alpha="0.7"
        android:padding="5dp"/>

    <EditText
        android:id="@+id/edit_dollars"
        android:layout_width="wrap_content"
        android:layout_alignLeft="@+id/edit_rupees"
        android:layout_alignStart="@+id/edit_rupees"
        android:layout_alignTop="@+id/textview_d"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#fff"
        android:background="#000"
        android:textStyle="bold"
        android:layout_height="50dp"
        android:padding="2dp"
        android:gravity="center"
        />

    <Button
        android:id="@+id/convert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_d"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:alpha="0.7"
        android:background="#000"
        android:onClick="convert"
        android:padding="5dp"
        android:text="Convert"
        android:textColor="#ffff"
        android:textSize="30sp" />

</RelativeLayout>
